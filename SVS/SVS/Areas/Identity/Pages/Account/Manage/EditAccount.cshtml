@page

@model SVS.Areas.Identity.Pages.Account.Manage.AccountsEdit

@{
    ViewData["Title"] = "EditAccount";
}
<link rel="stylesheet" href="~/css/registerPage.css"/>
<body>
<div class="contact-form">
    <img src="https://www.apkmirror.com/wp-content/uploads/2017/12/5a3020dca74c5.png" class="avatar">
    <h2>Edit account</h2>
    <form method="post">
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="UserChange.ID"/>
        <div class="form-group">
            <label asp-for="UserChange.Username"></label>
            <input asp-for="UserChange.Username" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="UserChange.Name"></label>
            <input asp-for="UserChange.Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="UserChange.LastName"></label>
            <input asp-for="UserChange.LastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="UserChange.Role"></label>
            <br>
            @Html.DropDownListFor(model => model.UserChange.Role, Model.Roles)
        </div>
        <div class="form-group">
            <label asp-for="UserChange.PhoneNumber"></label>
            <input asp-for="UserChange.PhoneNumber" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="UserChange.Email"></label>
            <input asp-for="UserChange.Email" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}