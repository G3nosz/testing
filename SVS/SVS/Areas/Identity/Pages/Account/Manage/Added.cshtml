@page
@model UserAddedModel
@{
    ViewData["Title"] = "Register User";
}
<style>
    .addded-container {
        text-align: center;
        transform: translate(-25%, -20%);
    }

    .id-code { color: rgb(94, 146, 226); }

    .id-code:hover {
        color: rgb(150, 190, 252);
        text-decoration: none;
    }
</style>

<header>
    <div class="addded-container">
        <h1>User <a class="id-code" asp-page="./Accounts" asp-route-id="@Model.RegisteredUser">@Model.RegisteredUser </a>succesfully added!</h1>
        <h2>
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Accounts">Account List</a>
        </h2>
    </div>
</header>